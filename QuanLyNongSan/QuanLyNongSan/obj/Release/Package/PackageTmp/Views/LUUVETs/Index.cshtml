@model IEnumerable<QuanLyNongSan.Models.LUUVET>

@{
    ViewBag.Title = "Danh sách - Lưu vết";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<QuanLyNongSan.Models.NHANVIEN> ListNhanVien = ViewBag.NhanVien as List<QuanLyNongSan.Models.NHANVIEN>;
    List<QuanLyNongSan.Models.TRAM> ListTram = ViewBag.Tram as List<QuanLyNongSan.Models.TRAM>;
}

<div class="content-wrapper" style="min-height: 1200.88px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Lưu Vết</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        @*<li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">DataTables</li>*@
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="col-2 @ViewBag.Add">
                            <h3 class="card-title">Lưu Vết</h3>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaDHX)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaTram)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaNV)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TrangThai)
                                    </th>
                                    <th class="@ViewBag.IsAdmin">Hành Động</th>
                                </tr>

                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a href="/DonHangXuats/Details/@item.MaDHX"> @item.MaDHX</a>
                                        </td>
                                        <td>
                                            @if (ListTram.FirstOrDefault(x => x.MaTram == item.MaTram) != null)
                                            {
                                                @ListTram.FirstOrDefault(x => x.MaTram == item.MaTram).TenTram
                                            }
                                        </td>
                                        <td>
                                            @if (ListNhanVien.FirstOrDefault(x => x.MaNV == item.MaNV) != null)
                                            {
                                                @ListNhanVien.FirstOrDefault(x => x.MaNV == item.MaNV).Hoten
                                            }
                                        </td>
                                        <td>
                                            @if ((bool)item.TrangThai)
                                            {
                                                <span>Hoàn Thành</span>
                                            }
                                            else
                                            {
                                                <span>Chưa Hoàn Thành</span>
                                            }
                                        </td>
                                        <td class="@ViewBag.IsAdmin">
                                            <a href="@Url.Action("Edit", "LuuVets",new { id = item.MaDHX })" title="Sửa">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a>|
                                            <a style="color:red;" href="@Url.Action("Delete", "LuuVets",new { id = item.MaDHX })" title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaDHX)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaTram)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaNV)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TrangThai)
                                    </th>
                                    <th class="@ViewBag.IsAdmin">Hành Động</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>
