
@{
    ViewBag.Title = ViewBag.TT;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper" style="min-height: 1200.88px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewBag.TT</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        @*<li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">DataTables</li>*@
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Thông Tin</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        @if (ViewBag.DHN == 1)
                        {
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Mã ĐH
                                        </th>
                                        <th>Tên Loại</th>

                                        <th>
                                            Sản Phẩm
                                        </th>
                                        <th>
                                            Số Lượng
                                        </th>
                                        <th>NCC</th>
                                        <th>Nhân Viên</th>
                                        <th>Thời Gian</th>
                                        <th>Phương Tiện</th>
                                        <th>Trạng Thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MaDHX</td>
                                            <td>@item.TenLoai</td>
                                            <td><a href="#"  onclick="getInfoProduct(@item.MaSP)"> @item.TenSP</a></td>
                                            <td>@item.SoLuong</td>
                                            <td>@item.TenNhaCC</td>
                                            <td>@item.Hoten</td>
                                            <td>@item.ThoiGian</td>
                                            <td>@item.PhuongTien</td>
                                            <td>
                                                @if (item.TrangThai != null && (bool)item.TrangThai)
                                                {
                                                    <span>Hoàn Thành</span>
                                                }
                                                else
                                                {
                                                    <span>Chưa Hoàn Thành</span>
                                                }
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>
                                            Mã ĐH
                                        </th>
                                        <th>Tên Loại</th>

                                        <th>
                                            Sản Phẩm
                                        </th>
                                        <th>
                                            Số Lượng
                                        </th>
                                        <th>NCC</th>
                                        <th>Nhân Viên</th>
                                        <th>Thời Gian</th>
                                        <th>Phương Tiện</th>
                                        <th>Trạng Thái</th>
                                    </tr>
                                </tfoot>
                            </table>
                        }
                        else
                        {
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Mã ĐH
                                        </th>
                                        <th>Tên Loại</th>

                                        <th>
                                            Sản Phẩm
                                        </th>
                                        <th>
                                            Số Lượng
                                        </th>
                                        <th>Đại Lý</th>
                                        <th>NCC</th>
                                        <th>Nhân Viên</th>
                                        <th>Trạm</th>
                                        <th>Thời Gian</th>
                                        <th>Phương Tiện</th>
                                        <th>Trạng Thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MaDHX</td>
                                            <td>@item.TenLoai</td>
                                            <td><a href="#" onclick="getInfoProduct(@item.MaSP)"> @item.TenSP</a></td>
                                            <td>@item.SoLuong</td>
                                            <td>@item.TenDL</td>
                                            <td>@item.TenNhaCC</td>
                                            <td>@item.Hoten</td>
                                            <td>@item.TenTram</td>
                                            <td>@item.ThoiGian</td>
                                            <td>@item.PhuongTien</td>
                                            <td>
                                                @if ((bool)item.TrangThai)
                                                {
                                                    <span>Hoàn Thành</span>
                                                }
                                                else
                                                {
                                                    <span>Chưa Hoàn Thành</span>
                                                }
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>
                                            Mã ĐH
                                        </th>
                                        <th>Tên Loại</th>

                                        <th>
                                            Sản Phẩm
                                        </th>
                                        <th>
                                            Số Lượng
                                        </th>
                                        <th>Đại Lý</th>
                                        <th>NCC</th>
                                        <th>Nhân Viên</th>
                                        <th>Trạm</th>
                                        <th>Thời Gian</th>
                                        <th>Phương Tiện</th>
                                        <th>Trạng Thái</th>
                                    </tr>
                                </tfoot>
                            </table>
                        }

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>