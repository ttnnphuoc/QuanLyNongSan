
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<form class="login100-form validate-form" method="post" action="/TaiKhoans/Login">
    <span class="login100-form-title p-b-33">
        Đăng Nhập
    </span>

    <div class="wrap-input100 validate-input" data-validate="Tài khoản là bắt buộc">
        <input class="input100" type="text" name="userName" id="userName" placeholder="Tài khoản">
        <span class="focus-input100-1"></span>
        <span class="focus-input100-2"></span>
    </div>

    <div class="wrap-input100 rs1 validate-input" data-validate="Mật khẩu là bắt buộc">
        <input class="input100" type="password" name="passWord" id="passWord" placeholder="Mật khẩu">
        <span class="focus-input100-1"></span>
        <span class="focus-input100-2"></span>
    </div>

    <div class="container-login100-form-btn m-t-20">
        <button class="login100-form-btn">
            Đăng Nhập
        </button>
    </div>

    <div class="text-center">
        <span class="txt1">
            Tạo tài khoản
        </span>

        <a href="/TaiKhoans/Create" class="txt2 hov1">
            Đăng Ký
        </a>
    </div>
</form>