@model IEnumerable<QuanLyNongSan.Models.DAILY>

@{
    ViewBag.Title = "Danh sách Đại Lý";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<QuanLyNongSan.Models.LOAIDAILY> ListLoaiDaiLy = ViewBag.LoaiDaiLy as List<QuanLyNongSan.Models.LOAIDAILY>;
}

<div class="content-wrapper" style="min-height: 1200.88px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Đại Lý</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        @*<li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">DataTables</li>*@
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="col-2 @ViewBag.Add">
                            <a href="/Dailies/Create" class="btn btn-block btn-success"><i class="fas fa-plus"></i> Thêm mới</a>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaLoai)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Ten)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SoDT)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DiaChi)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.isXoa)
                                    </th>
                                    <th class="@ViewBag.IsAdmin">Hành Động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (@ListLoaiDaiLy.FirstOrDefault(x => x.MaLoai == (int)item.MaLoai) != null)
                                            {
                                                <span>Cấp </span>@ListLoaiDaiLy.FirstOrDefault(x => x.MaLoai == (int)item.MaLoai).Cap
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ten)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SoDT)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DiaChi)
                                        </td>
                                        <td>
                                            @if ((bool)item.isXoa)
                                            {
                                                <span>Đã Xóa</span>
                                            }
                                            else
                                            {
                                                <span>Chưa Xóa</span>
                                            }
                                        </td>
                                        <td class="@ViewBag.IsAdmin">

                                            <a href="@Url.Action("Edit", "Dailies",new { id = item.MaDL })" title="Sửa">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a>|
                                            <a style="color:red;" href="@Url.Action("Delete", "Dailies",new { id = item.MaDL })" title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaLoai)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Ten)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SoDT)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DiaChi)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.isXoa)
                                    </th>
                                    <th class="@ViewBag.IsAdmin">Hành Động</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>