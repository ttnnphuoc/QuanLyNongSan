@model QuanLyNongSan.Models.CHITIETDONHANGNHAP

@{
    ViewBag.Title = "Chỉnh sửa Chi Tiết Đơn Hàng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper" style="min-height: 1200.88px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Chi Tiết Đơn Hàng Nhập</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        @*<li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">DataTables</li>*@
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="col-2">
                            <a href="/DonHangNhaps/Create" class="btn btn-block btn-success"><i class="fas fa-plus"></i> Thêm mới</a>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">


                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                              
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.MaDHN)

                                @Html.HiddenFor(model => model.MaSP)

                                <div class="form-group">
                                    <label class="control-label col-md-2">Sản Phẩm</label>
                                    <div class="col-md-5">
                                      <input type="text" class="form-control" readonly value="@ViewBag.TenSanPham"/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @*@Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                    <label class="control-label col-md-2">Số Lượng</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @*@Html.LabelFor(model => model.TrangThai, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                    <label class="control-label col-md-2">Trạng Thái</label>
                                    <div class="col-md-5">
                                        @*@Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })*@
                                        <select name="TrangThai" id="TrangThai" class="form-control">
                                            @if (Model.TrangThai != null && Model.TrangThai == "1")
                                            {
                                                <option selected value="1">Hoàn Thành</option>
                                            }
                                            <option value="0">Chưa Hoàn Thành</option>
                                        </select>
                                        @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                @*<div class="form-group">
                                    @Html.LabelFor(model => model.isXoa, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.isXoa)
                                            @Html.ValidationMessageFor(model => model.isXoa, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>*@

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Lưu" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>
