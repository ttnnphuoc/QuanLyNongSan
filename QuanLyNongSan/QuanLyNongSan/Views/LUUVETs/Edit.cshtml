@model QuanLyNongSan.Models.LUUVET

@{
    ViewBag.Title = "Chỉnh sửa - Lưu vết";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<QuanLyNongSan.Models.TRAM> ListTram = ViewBag.Tram as List<QuanLyNongSan.Models.TRAM>;
    List<QuanLyNongSan.Models.NHANVIEN> ListNhanVien = ViewBag.NhanVien as List<QuanLyNongSan.Models.NHANVIEN>;

}

<div class="content-wrapper" style="min-height: 1200.88px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Lưu Vết</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        @*<li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">DataTables</li>*@
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Thông Tin</h3>

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.MaDHX)
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TrangThai, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-5">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = " form-control" } })
                                            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaNV, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-5">
                                        <select class="list-box tri-state form-control" id="MaNV" name="MaNV">
                                            @foreach (var item in ListNhanVien)
                                            {
                                                <option value="@item.MaNV">@item.Hoten</option>
                                            }
                                        </select>
                                        @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaTram, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-5">
                                        <select class="list-box tri-state form-control" id="MaTram" name="MaTram">
                                            @foreach (var item in ListTram)
                                            {
                                                if (item.MaTram + "" == Model.MaTram + "")
                                                {
                                                    <option selected value="@item.MaTram">@item.TenTram</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.MaTram">@item.TenTram</option>
                                                }
                                            }
                                        </select>
                                        @Html.ValidationMessageFor(model => model.MaTram, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Lưu" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }

                        <div>
                            @Html.ActionLink("Quay Lại", "Index")
                        </div>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>