
@{
    ViewBag.Title = "Thêm mới - Tài khoản";

    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<form class="login100-form validate-form" action="/TaiKhoans/Create" method="post">
    <span class="login100-form-title p-b-33">
        Đăng Ký
    </span>
    <span style="color:red;">@ViewBag.Message</span>
    <div class="wrap-input100 validate-input" data-validate="Tài khoản là bắt buộc">
        <input class="input100" type="text" name="TaiKhoan1" id="TaiKhoan1" placeholder="Tài khoản">
        <span class="focus-input100-1"></span>
        <span class="focus-input100-2"></span>
    </div>

    <div class="wrap-input100 rs1 validate-input" data-validate="Mật khẩu là bắt buộc">
        <input class="input100" type="password" name="MatKhau" id="MatKhau" placeholder="Mật khẩu">
        <span class="focus-input100-1"></span>
        <span class="focus-input100-2"></span>
    </div>
    <div class="wrap-input100 rs1 ">
        <input class="input100" type="text" name="HoTen" id="HoTen" placeholder="Họ Tên">
        <span class="focus-input100-1"></span>
        <span class="focus-input100-2"></span>
    </div>
    <div class="container-login100-form-btn m-t-20">
        <button class="login100-form-btn">
            Đăng Ký
        </button>
    </div>

    <div class="text-center">
        <span class="txt1">
            Quay Lại
        </span>

        <a href="/TaiKhoans/Login" class="txt2 hov1">
            Đăng Nhập
        </a>
    </div>
</form>